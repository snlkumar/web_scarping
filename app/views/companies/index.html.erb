
<%= form_with model: @company_search, format: :csv, url: "/search.csv", method: :get, class: "form-group" do |form| %>
  <div class="form-group">
    <%= form.label :limit, "No of comapnies:" %>
    <%= form.number_field :limit, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :company_size %>
    <%= form.text_field :team_size, class: "form-control"  %>
    
  </div>
  <div class="form-group">
    <%= form.label :batch %>
    <%= form.text_field :batch, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :industry %>
    <%= form.text_field :industry, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :region %>
    <%= form.text_field :region, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :tag %>
    <%= form.text_field :tags, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :is_hiring %>
    <%= form.check_box :isHiring, {}  %>
  </div>
  <div class="form-group">
    <%= form.label :nonprofit %>
    <%= form.check_box :nonprofit, {}  %>
  </div>
  <div class="form-group">
    <%= form.label :black_founded %>
    <%= form.check_box :highlight_black, {}  %>
  </div>
  <div class="form-group">
    <%= form.label :hispanic_latino_founded %>
    <%= form.check_box :highlight_latinx, {}  %>
  </div>
  
  <div class="form-group">
    <%= form.label :women_founded %>
    <%= form.check_box :highlight_women, {}  %>
  </div>
  <div class="form-controll">
    <%= form.submit "Search", class: "btn btn-primary" %>
  </div>
  
<% end %>
